<body>
<div class="fire-strip" id="fire">
  <div class="base-glow"></div>
  <div class="smoke"></div>
</div>

<script>
const fire = document.getElementById("fire");

/* Flames */
const flameSpacingPx = 9;
const flameCount = Math.floor(fire.clientWidth / flameSpacingPx);

for (let i = 0; i < flameCount; i++) {
  const f = document.createElement("div");
  f.className = "flame";

  f.style.left = `${i * flameSpacingPx + (Math.random() * 2 - 1)}px`;
  f.style.setProperty("--speed", `${2.7 + Math.random() * 0.9}s`);
  f.style.height = `${48 + Math.random() * 10}%`;
  f.style.setProperty("--bendSpeed", `${6.5 + Math.random() * 3}s`);
  f.style.setProperty("--bendDelay", `${Math.random() * 4}s`);
  f.style.setProperty("--delay", `${(i / flameCount) * 3}s`);
  f.style.setProperty("--heatSpeed", `${3.5 + Math.random() * 2.5}s`);
  f.style.setProperty("--heatDelay", `${Math.random() * 2}s`);

  fire.appendChild(f);
}

/* Sparks (already reduced) */
setInterval(() => {
  const s = document.createElement("div");
  s.className = "spark";
  s.style.left = `${Math.random() * 100}%`;
  s.style.setProperty("--h", `${10 + Math.random() * 10}px`);
  s.style.setProperty("--o", `${0.65 + Math.random() * 0.3}`);
  fire.appendChild(s);
  setTimeout(() => s.remove(), 1900);
}, 320);

/* ðŸ”¥ DENSER FOG â€” VISIBLE */
setInterval(() => {
  const fogCount = 1 + Math.floor(Math.random() * 2);
  for (let i = 0; i < fogCount; i++) {
    const fog = document.createElement("div");
    fog.className = "fog-wisp";
    fog.style.left = `${10 + Math.random() * 80}%`;
    fire.appendChild(fog);
    setTimeout(() => fog.remove(), 6500);
  }
}, 6500 + Math.random() * 3000);
</script>
</body>
</html>